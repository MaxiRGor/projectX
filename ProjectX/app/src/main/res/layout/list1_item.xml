<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTintMode="screen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/backg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_work_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Починка компьютера"
            android:textColor="#000"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/text_cost_item"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="30$"
            android:textColor="#000" />
        <TextView
            android:id="@+id/text_cost_invis"
            android:layout_width="87dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="30$"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@drawable/backg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_field_one"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Поле 1"
            android:textColor="#000" />

        <TextView
            android:id="@+id/text_field_two"
            android:layout_width="147dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="Поле 2"
            android:textColor="#000" />

        <TextView
        android:id="@+id/text_field_four"
        android:visibility="invisible"
        android:layout_width="147dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:text="Поле 2"
        android:textColor="#000" />



    </LinearLayout>
</LinearLayout>